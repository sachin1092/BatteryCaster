<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Base.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!--<item name="switchStyle">@style/Widget.Holo.CompoundButton.Switch</item>-->
        <!--<item name="switchPreferenceStyle">@style/Preference.SwitchPreference</item>-->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="switchStyle">@style/Widget.Material.CompoundButton.Switch</item>
    </style>

    <style name="UndoBar" parent="UndoBarKitKat" />

    <style name="UndoBarMessage" parent="UndoBarMessageKitKat" />

    <style name="UndoBarButton" parent="UndoBarButtonKitKat" />

    <style name="body">
        <item name="android:textSize">@dimen/body_font_size</item>
    </style>

    <style name="ToastBarStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/panel_undo_holo</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:layout_marginRight">4.0dip</item>
    </style>

    <style name="alarm_label">
        <item name="android:textSize">@dimen/alarm_label_size</item>
    </style>

    <style name="alarm_label_not_caps" parent="@style/alarm_label"></style>

    <style name="alarm_label_bold">
        <item name="android:textSize">@dimen/alarm_label_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_not_caps" parent="@style/body"></style>

    <style name="body_days" parent="@style/body">
        <item name="android:textSize">@dimen/body_font_days</item>
    </style>

    <style name="body_bold">
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_bold">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_light">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.StatusBar" parent="@style/TextAppearance">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent" parent="@style/TextAppearance.StatusBar">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Line2" parent="@style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Time" parent="@style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="DeskClock" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/blackish</item>
        <item name="actionBarTabStyle">@style/DeskClockTabStyle</item>
        <item name="actionBarStyle">@style/DeskClockBarStyle</item>
        <item name="actionBarTabBarStyle">@style/DeskClockTabBarStyle</item>
        <item name="selectableItemBackground">@drawable/item_background</item>
        <!--<item name="switchStyle">@style/Widget.Holo.CompoundButton.Switch</item>-->
        <!--<item name="switchPreferenceStyle">@style/Preference.SwitchPreference</item>-->
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
        <item name="switchStyle">@style/Widget.Material.CompoundButton.Switch</item>
    </style>

    <style name="DeskClockTabStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:paddingLeft">@dimen/actionbar_tab_padding</item>
        <item name="android:paddingRight">@dimen/actionbar_tab_padding</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/item_background</item>
    </style>

    <style name="DeskClockTabBarStyle" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@drawable/header_bg</item>
        <item name="showDividers">middle</item>
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="dividerPadding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DeskClockBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/header_bg_bar</item>
        <item name="backgroundStacked">@null</item>
        <item name="backgroundSplit">@null</item>
        <item name="displayOptions"></item>
    </style>

    <style name="button">
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="HoloButton.Borderless" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/item_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">4dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="MessageBar" />

    <style name="MessageBar.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/mb__messagebar_background</item>
        <item name="android:clickable">true</item>
        <item name="showDividers">middle</item>
        <item name="android:divider">@drawable/mb__messagebar_divider</item>
        <item name="dividerPadding">10dp</item>
    </style>

    <style name="MessageBar.Message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageBar.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/mb__item_background_holo_dark</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat"></style>

    <style name="Theme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@drawable/trans3</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>