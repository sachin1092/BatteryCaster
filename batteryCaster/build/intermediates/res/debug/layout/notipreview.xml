<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLine2"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" >

        <FrameLayout
            android:id="@+id/swn_collapsed_hitspace"
            android:layout_width="fill_parent"
            android:layout_height="64.0dip"
            android:background="@drawable/notification_bg" >

            <RelativeLayout
                android:layout_width="@dimen/notification_large_icon_width"
                android:layout_height="@dimen/notification_large_icon_height"
                android:contentDescription="@string/todo"
                android:scaleType="center" >

                <ImageView
                    android:layout_width="@dimen/notification_large_icon_width"
                    android:layout_height="@dimen/notification_large_icon_height"
                    android:alpha=".4"
                    android:background="#ff1e8bd4"
                    android:scaleType="center" />

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="@dimen/notification_large_icon_width"
                    android:layout_height="@dimen/notification_large_icon_height"
                    android:scaleType="center"
                    android:src="@drawable/simple_72" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_marginLeft="@dimen/notification_large_icon_width"
                android:layout_marginStart="@dimen/notification_large_icon_width"
                android:gravity="center"
                android:minHeight="@dimen/notification_large_icon_height"
                android:orientation="vertical"
                android:paddingBottom="2.0dip"
                android:paddingEnd="8.0dip"
                android:paddingLeft="5.0dip"
                android:paddingTop="2.0dip" >

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvNotiPrevmainText"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:singleLine="true"
                        android:text="Main Text"
                        android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNotiPrevsubText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8.0dip"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:text="Subtext"
                    android:textAppearance="@style/TextAppearance.StatusBar.EventContent"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivLine2"
        android:background="@drawable/apptheme_spinner_background_holo_dark"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="Stencil Circle"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivLine3"
        android:layout_below="@+id/ivLine3"
        android:background="@drawable/apptheme_spinner_background_holo_dark"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:text="Stencil Circle"
        android:textColor="#fff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ivLine3"
        android:layout_width="144dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ivLine2"
        android:layout_below="@+id/ivLine2"
        android:layout_marginTop="65dp"
        android:src="@drawable/liner3" />

    <ImageView
        android:id="@+id/ivLine2"
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/frameLayout1"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="-28dp"
        android:layout_marginRight="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/liner2" />

    <ImageView
        android:id="@+id/ivLine1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/frameLayout1"
        android:layout_alignLeft="@+id/frameLayout1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/liner" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivLine1"
        android:layout_alignLeft="@+id/ivLine1"
        android:background="@drawable/apptheme_spinner_background_holo_dark"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:text="Stencil Circle"
        android:textColor="#fff"
        android:textSize="15sp" />

</RelativeLayout><!-- From: file:/mnt/Games/AndroidStudioProjects/BatteryCaster/batteryCaster/src/main/res/layout/notipreview.xml -->