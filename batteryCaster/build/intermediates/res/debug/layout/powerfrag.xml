<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:holo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00111111"
    tools:ignore="ContentDescription,UselessParent,Overdraw" >

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewbar"
        android:layout_alignParentTop="true" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="6.0dp"
            android:drawSelectorOnTop="false"
            android:listSelector="#00ffffff"
            android:scrollbars="none" />

        <FrameLayout
            android:id="@+id/alarms_footer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/footer_bg" >

            <ImageButton
                android:id="@+id/alarm_add_alarm"
                style="@style/button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/main_button_blue"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_add" />

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/item_background"
                android:contentDescription="@string/todo"
                android:src="@drawable/abc_ic_menu_moreoverflow_normal_holo_dark" />
        </FrameLayout>
    </FrameLayout>

    <View
        android:id="@+id/viewbar"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_above="@+id/lltoggles"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#a08e8f90" />

    <LinearLayout
        android:id="@+id/lltoggles"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@color/blackish"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ibwifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/wifi_on" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#a08e8f90" />

        <ImageButton
            android:id="@+id/ibmdata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/mdata_on" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#a08e8f90" />

        <ImageButton
            android:id="@+id/ibbtooth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/btooth_on" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#a08e8f90" />

        <ImageButton
            android:id="@+id/ibamode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/amode_on" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#a08e8f90" />

        <ImageButton
            android:id="@+id/ibsync"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/sync_on" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#a08e8f90" />

        <ImageButton
            android:id="@+id/ibarotate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/orientation_on" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#a08e8f90" />

        <ImageButton
            android:id="@+id/ibbrightness"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_background"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/bauto_on" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/mnt/Games/AndroidStudioProjects/BatteryCaster/batteryCaster/src/main/res/layout/powerfrag.xml -->