<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ff161616"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvchangeLogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/actionbar_back"
        android:gravity="center_vertical|start"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/tvchangeLogTitle"
        android:background="#a08e8f90" />

    <ListView
        android:id="@+id/lvListPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/view"
        android:background="@color/blackish" >
    </ListView>

    <Button
        android:id="@+id/bCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvListPref"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="0.5dp"
        android:background="@drawable/bnew_item_background"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Cancel"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout><!-- From: file:/mnt/Games/AndroidStudioProjects/BatteryCaster/batteryCaster/src/main/res/layout/listpref.xml -->