<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FF33b5e5" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Rate now and Support Us."
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/bRatenow"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/mbutton"
            android:text="Rate now"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/bRateLater"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/mbutton"
            android:text="Later"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/bRateNever"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/mbutton"
            android:text="Never"
            android:textColor="#ffffffff" />
    </LinearLayout>

</LinearLayout><!-- From: file:/mnt/Games/AndroidStudioProjects/BatteryCaster/batteryCaster/src/main/res/layout/ratedialog.xml -->